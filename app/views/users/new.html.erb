
<div class="container">
  <div class="row">
      <div class="col-md-4 col-md-offset-4">
          <div class="login-panel panel panel-default">
              <div class="panel-heading">
                  <h3 class="panel-title">注册</h3>
              </div>
              <div class="panel-body">
                  <%= simple_form_for :user, url: '/users' do |f| %>
                      <fieldset>
                          <%if @invi_user.present?%>
                            <div class="alert alert-info">
                              <%=@invi_user.login%>邀请您注册
                              <%=f.input :parent_id,as: :hidden, input_html: { value: @invi_user.id }%>
                            </div>
                          <%end%>
                          <div class="form-group"><label>登录名</label>
                              <%= f.text_field :login,class: "form-control",placeholder: "登录名",type:  "email" %>
                          </div>
                          <div class="form-group"><label>密码</label>
                              <%= f.password_field :password ,class: "form-control",placeholder: "密码"  %>
                          </div>
                          <div class="form-group"><label>确认密码</label>
                              <%= f.password_field :password_confirmation ,class: "form-control",placeholder: "确认密码"  %>
                          </div>
                          
                          <!-- Change this to a button or input when using this as a form -->
                          <%= f.submit "注册",:class=>"btn btn-lg btn-success btn-block" %>
                         
                      </fieldset>
                  <%end%>
              </div>
          </div>
      </div>
  </div>
</div>