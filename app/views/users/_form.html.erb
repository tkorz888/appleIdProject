<%= simple_form_for(@user) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    
    <%= f.input :password  %>
    <%= f.input :password_confirmation %>
    <%if current_user.is_admin?%>
      <%= f.input :login %>
      <%= f.input :state ,:collection => User.states.invert%>
      <%= f.input :is_admin %>
    <%end%>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
